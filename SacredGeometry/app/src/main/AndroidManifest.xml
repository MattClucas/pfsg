<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clucasprojects.sacredgeometry" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetRollsActivity"
            android:label="@string/title_activity_set_rolls"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clucasprojects.sacredgeometry.MainActivity" />
        </activity>
        <activity
            android:name=".CalculateActivity"
            android:label="@string/title_activity_calculate"
            android:parentActivityName=".SetRollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.clucasprojects.sacredgeometry.SetRollsActivity" />
        </activity>
    </application>

</manifest>
